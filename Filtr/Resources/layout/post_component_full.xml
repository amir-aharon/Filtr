<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colDark"
    android:gravity="center">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:background="@drawable/image_holder"
        android:id="@+id/ivContent"
        />

    <RelativeLayout
        
        android:layout_width="400dp"
        android:layout_height="90dp"
        android:background="@color/colDark"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="15dp">

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:background="#292F36"
            android:orientation="vertical"
            >
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="-3dp"
            android:text="By Fname Lname"
            android:textColor="#4ECDC4"
                android:id="@+id/tvUser"
            android:layout_marginBottom="10dp"/>

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
                android:id="@+id/tvFilter"
                android:text="#[filter_name]"
            android:textColor="#FFE66D"
/>

        </LinearLayout>

        <FrameLayout
            android:layout_alignParentEnd="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
            android:id="@+id/btnLike">
            <ImageView
            android:layout_width="43dp"
            android:layout_height="40dp"
                android:id="@+id/fullIcon"
                android:visibility="invisible"
            android:background="@drawable/like_full"/>
            <ImageView
            android:layout_width="43dp"
            android:layout_height="40dp"
                android:id="@+id/emptyIcon"
            android:background="@drawable/like_empty"/>
        </FrameLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="2dp"
        android:background="@color/colRed"/>
</LinearLayout>
