<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292F36"
    android:id="@+id/creator_page"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="10dp"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/menu_button"
            android:backgroundTint="#FF6B6B"
            android:textAlignment="center"
            android:text="â•³"
            android:textSize="30sp"
            android:textAllCaps="false"
            android:id="@+id/btnExit"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
        >

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:background="@drawable/menu_button"
                android:backgroundTint="#4ECDC4"
                android:text="Post to Filtr"
                android:textAllCaps="false"
                android:id="@+id/btnPost"
        />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/loadingPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:background="@drawable/image_holder"
            android:id="@+id/ivcreatorpage"/>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminate="true" 
            android:id="@+id/loadingSign"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:isScrollContainer="true"
            android:orientation="vertical"
        >

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/menu_button"
                android:backgroundTint="#eee"
                android:text="No Filter"
                android:id="@+id/btnNoFilter"
                android:textSize="30sp"
                android:layout_marginVertical="10dp"
                android:textAllCaps="false"
            />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/menu_button"
                android:backgroundTint="#eee"
                android:text="Monochrome"
                android:textSize="30sp"
                android:id="@+id/btnMonoFilter"
                android:layout_marginVertical="10dp"
                android:textAllCaps="false"
            />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/menu_button"
                android:backgroundTint="#eee"
                android:text="Pixelate"
                android:id="@+id/btnPixelFilter"
                android:textSize="30sp"
                android:layout_marginVertical="10dp"
                android:textAllCaps="false"
            />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/menu_button"
                android:backgroundTint="#eee"
                android:text="Ascii"
                android:id="@+id/btnAsciiFilter"
                android:textSize="30sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:textAllCaps="false"
            />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
