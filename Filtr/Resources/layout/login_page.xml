<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcomebg"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="0dp"
    android:id="@+id/login_page"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Welcome Back!"
        android:textSize="18dp"
        android:textAlignment="center"
        android:textColor="@color/colDark"
        android:layout_marginTop="184dp"
        android:id="@+id/tvHeader"
        />
        
        <ImageView
            android:layout_width="269dp"
            android:layout_height="208dp"
            android:layout_marginTop="41dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/loginpageart"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="10dp">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="76dp"
        android:layout_marginHorizontal="25dp"
        android:background="@drawable/form_textfield"
        android:hint="Enter your email"
        android:paddingLeft="33dp"
        android:textAlignment="viewStart"
        android:gravity="center"
            android:inputType="textPersonName"
        android:textSize="13dp"
        android:textColorHint="#404040"
        android:id="@+id/etEmail"/>
    
    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="25dp"
        android:background="@drawable/form_textfield"
        android:hint="Enter your password"
        android:paddingLeft="33dp"
        android:textAlignment="viewStart"
        android:gravity="center"
        android:textSize="13dp"
            android:inputType="textPassword"
        android:textColorHint="#404040"
        android:id="@+id/etPassword"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="36dp"
        android:layout_marginHorizontal="25dp"
        android:background="@color/colRed"
        android:text="Sign In"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="18dp"
        android:textColor="#fff"
        android:id="@+id/btnLogin"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:orientation="horizontal"
        android:layout_marginTop="14dp">
    
        <TextView
             android:layout_width="wrap_content"
             android:layout_height="24dp"
            android:layout_gravity="center"
            android:text="Don't have an account?"
            android:textSize="14sp"
            android:textColor="#000"
            android:alpha=".75"
            android:layout_marginRight="-10dp"
            android:id="@+id/tvFooterText"
            />
        
        <androidx.appcompat.widget.AppCompatButton
             android:layout_width="wrap_content"
             android:layout_height="24dp"
            android:layout_gravity="center"
            android:text="Sign up"
            android:background="@android:color/transparent"
            android:textSize="14sp"
            android:textColor="@color/colRed"
            android:id="@+id/btnFooterLink"
            />  

    </LinearLayout>

    </LinearLayout>
    
</RelativeLayout>